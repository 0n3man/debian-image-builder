+find -type f -exec touch {} +
+echo 'y' | make -s scripts >/dev/null
+echo 'y' | make -s M=scripts/mod/ >/dev/null
+exit 0
+EOT
+
+        chmod 755 $kernel_headers_dir/DEBIAN/postinst
+
