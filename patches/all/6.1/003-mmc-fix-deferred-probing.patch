+++ b/drivers/mmc/host/bcm2835.c	2023-06-10 10:02:03.786210675 -0400
@@ -1411,8 +1411,8 @@
 	host->max_clk = clk_get_rate(clk);
 
 	host->irq = platform_get_irq(pdev, 0);
-	if (host->irq <= 0) {
-		ret = -EINVAL;
+	if (host->irq < 0) {
+		ret = host->irq;
 		goto err;
 	}
 
