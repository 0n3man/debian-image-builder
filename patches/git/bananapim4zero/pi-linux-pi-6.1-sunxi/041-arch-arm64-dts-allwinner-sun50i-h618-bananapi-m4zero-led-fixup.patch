Subject: [PATCH] arch: arm64: dts: allwinner: sun50i-h618-bananapi-m4zero

led red:status fixup

Signed-off-by: Patrick Yavitz <pyavitz@xxxxx.com>
---
 .../boot/dts/allwinner/sun50i-h618-bananapi-m4zero.dts   | 9 +++++----
 1 file changed, 5 insertions(+), 4 deletions(-)

diff --git a/arch/arm64/boot/dts/allwinner/sun50i-h618-bananapi-m4zero.dts b/arch/arm64/boot/dts/allwinner/sun50i-h618-bananapi-m4zero.dts
index a22436fd69..c78f44aa9c 100644
--- a/arch/arm64/boot/dts/allwinner/sun50i-h618-bananapi-m4zero.dts
+++ b/arch/arm64/boot/dts/allwinner/sun50i-h618-bananapi-m4zero.dts
@@ -37,12 +37,13 @@ hdmi_con_in: endpoint {
 		};
 	};
 
-	leds: leds {
+	leds {
 		compatible = "gpio-leds";
 
-		led-greed {
-			label = "red_led";
-			gpios = <&pio 2 12 GPIO_ACTIVE_HIGH>; /* PC12 */
+		led-red {
+			color = <LED_COLOR_ID_RED>;
+			function = LED_FUNCTION_STATUS;
+			gpios = <&pio 2 12 GPIO_ACTIVE_LOW>; /* PC12 */
 			linux,default-trigger = "heartbeat";
 		};
 	};
