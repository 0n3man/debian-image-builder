label kernel
    kernel /boot/Image
    initrd /boot/uInitrd
    fdtdir /boot/amlogic/
    fdt /boot/amlogic/meson-g12b-odroid-n2.dtb
    append earlyprintk console=tty1 console=ttyAML0,115200 rw root=PARTUUID=${ROOT_PARTUUID} rootwait rootfstype=ext4 net.ifnames=0 init=/sbin/init
EOF
