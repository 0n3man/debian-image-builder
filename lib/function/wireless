	echo "CONFIG_RTL8189ES=m" >> arch/${ARCH}/configs/${LINUX_DEFCONFIG};
fi
}

rtl8189es_module(){
if [[ "$BOARD" == "orangepir1" ]]; then
	rtl8189es_select;
fi
}

extra_wireless(){
if [ $rtl8812au -eq 1 ] || [ $rtl88x2bu -eq 1 ] || [ $rtl8811cu -eq 1 ] || [ $rtl8188eu -eq 1 ] || [[ "$BOARD" == "orangepir1" ]] || [[ "$BOARD" == "x96air" ]]; then
	echo ""
	if [ $rtl8812au -eq 1 ]; then
		echo -en "${WHT}Realtek 88XXAU${FIN} ";
		rtl8812au_download;
		echo_bdone;
	fi
	if [ $rtl88x2bu -eq 1 ]; then
		echo -en "${WHT}Realtek 88X2BU${FIN} ";
		rtl88x2bu_download;
		echo_bdone;
	fi
	if [ $rtl8811cu -eq 1 ]; then
		echo -en "${WHT}Realtek 88XXCU${FIN} ";
		rtl8811cu_download;
		echo_bdone;
	fi
	if [ $rtl8188eu -eq 1 ]; then
		echo -en "${WHT}Realtek 8188EU${FIN} ";
		rtl8188eu_download;
		echo_bdone;
	fi
	if [[ "$BOARD" == "orangepir1" ]]; then
		echo -en "${WHT}Realtek 8189ES${FIN} ";
		rtl8189es_download;
		echo_bdone;
	fi
	if [[ "$BOARD" == "x96air" ]]; then
		echo -en "${WHT}Realtek 88X2CS${FIN} ";
		rtl88x2cs_download;
		echo_bdone;
	fi
fi
}
