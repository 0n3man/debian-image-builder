# banners
debian_banner(){
if [ -e /usr/bin/toilet ]; [ -e /usr/share/figlet/small.flf ]; then
	toilet -f small --filter metal 'Debian';
else
	echo "${WHT}You are missing depends?${FIN}"
	sleep 1s
	sudo apt update
	sudo apt install -y toilet figlet
	echo ""
	toilet -f small --filter metal 'Debian';
fi
}

