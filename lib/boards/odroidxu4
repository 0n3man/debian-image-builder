# architecture
ARCH="arm"
ARCH_EXT="armhf"
CROSS_COMPILE="arm-linux-gnueabihf-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-arm-static"

# device tree blob
DTB="exynos5422-odroidxu4"
FAMILY="samsung"
FAMILY_EXT="exynos"

# default config
LINUX_DEFCONFIG="odroid-xu4_defconfig"
UBOOT_DEFCONFIG="odroid-xu3_defconfig"

# partition scheme
GPT="false"
EFI="false"
VFAT="false"
P_VALUE="p1"
OFFSET="4096"

# output
BOARD="odroidxu4"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttySAC2,115200n8 console=both"
EXTRA="net.ifnames=0 smsc95xx.macaddr=00:1e:06:61:7a:39 s5p_mfc.mem=16M"
EXTRA2="usbhid.quirks=0x0eef:0x0005:0x0004"

# motd
DEFAULT_MOTD="Odroid XU4"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT="files/boot/uboot/odroidxu4"

# github marker
GITHUB="linux"

# linux packaging
DEVICETREE="${DTB}.dtb"
PLATFORM="${FAMILY}"

# standard
COMMONNAME="exynos5422"
LINUXCOMMON="linux-image-${COMMONNAME}"
HEADERSCOMMON="linux-headers-${COMMONNAME}"
COMMONPATH="usr/lib/${LINUXCOMMON}"
COMMONDTREE="usr/lib/${LINUXCOMMON}/${DEVICETREE}"
COMMONOLYS="usr/lib/${LINUXCOMMON}/overlays"

# legacy
LEGACYNAME="${FAMILY_EXT}"
LINUXLEGACY="${LEGACYNAME}-linux-image"
HEADERSLEGACY="${LEGACYNAME}-linux-headers"
LEGACYPATH="usr/lib/${LINUXLEGACY}"
LEGACYDTREE="usr/lib/${LINUXLEGACY}/${DEVICETREE}"
LEGACYOLYS="usr/lib/${LINUXLEGACY}/overlays"

# install
INSTALL_DTB="boot/${PLATFORM}/${DEVICETREE}"
INSTALL_OLYS="boot/${PLATFORM}/"
