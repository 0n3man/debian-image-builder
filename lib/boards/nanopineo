# architecture
ARCH="arm"
ARCH_EXT="armhf"
CROSS_COMPILE="arm-linux-gnueabihf-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-arm-static"

# device tree blob
DTB="sun8i-h3-nanopi-neo"
FAMILY="allwinner"
FAMILY_EXT="sun8i"

# default config
LINUX_DEFCONFIG="sun8i_defconfig"
UBOOT_DEFCONFIG="nanopi_neo_defconfig"
IMG_EXP="${DTB}-*.img*"

# partitions
VFAT="false"
P_VALUE="p1"

# output
BOARD="nanopineo"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyS0,115200n8 console=both"
EXTRA="net.ifnames=0"

# motd
DEFAULT_MOTD="NanoPi NEO"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}/${FAMILY_EXT}"

# image size
IMGSIZE="3000MB"
