# architecture
ARCH="arm"
ARCH_EXT="armhf"
CROSS_COMPILE="arm-linux-gnueabihf-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-arm-static"

# device information
SERIES="sun7i-a20"
FAMILY="allwinner"
FAMILY_EXT="sun7i"
DTB="${SERIES}-cubietruck"

# default config
LINUX_DEFCONFIG="sun7i_defconfig"
UBOOT_DEFCONFIG="Cubietruck_defconfig"

# partition scheme
GPT="false"
EFI="false"
VFAT="false"
P_VALUE="p1"
OFFSET="4096"

# output
BOARD="cubietruck"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyS0,115200n8 console=both"
EXTRA="net.ifnames=0"

# motd
DEFAULT_MOTD="Cubietruck"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT=""

# github marker
GITHUB="linux"

# linux packaging
DEVICETREE="${DTB}.dtb"
PLATFORM="${FAMILY}"

# standard
LINUX_IMAGE="linux-image-${SERIES}"
LINUX_HEADERS="linux-headers-${SERIES}"
LINUX_PATH="usr/lib/${LINUX_IMAGE}"
LINUX_DTREE="usr/lib/${LINUX_IMAGE}/${DEVICETREE}"
LINUX_OLYS="usr/lib/${LINUX_IMAGE}/overlays"

# legacy
LEGACY_SERIES="${FAMILY_EXT}"
LEGACY_IMAGE="${LEGACY_SERIES}-linux-image"
LEGACY_HEADERS="${LEGACY_SERIES}-linux-headers"
LEGACY_PATH="usr/lib/${LEGACY_IMAGE}"
LEGACY_DTREE="usr/lib/${LEGACY_IMAGE}/${DEVICETREE}"
LEGACY_OLYS="usr/lib/${LEGACY_IMAGE}/overlays"

# install
INSTALL_DTB="boot/${PLATFORM}/${DEVICETREE}"
INSTALL_OLYS="boot/${PLATFORM}/"
