# architecture
ARCH="arm"
ARCH_EXT="armhf"
CROSS_COMPILE="arm-linux-gnueabihf-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-arm-static"

# device tree blob
DTB="meson8b-odroidc1"
FAMILY="amlogic"
FAMILY_EXT="meson8b"

# default config
LINUX_DEFCONFIG="meson8b_defconfig"
UBOOT_DEFCONFIG=""

# partition scheme
GPT="false"
EFI="false"
VFAT="true"
P_VALUE="p2"
OFFSET="8192"

# output
BOARD="odroidc1"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyAML0,115200n8 console=both"
EXTRA="net.ifnames=0 fsck.repair=yes"

# motd
DEFAULT_MOTD="Odroid C1"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}/${FAMILY_EXT}"

# image
IMGSIZE="3000MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT="files/boot/uboot/odroidc1"

# github marker
GITHUB="linux"
