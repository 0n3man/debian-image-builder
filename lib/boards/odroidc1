# architecture
ARCH="arm"
ARCH_EXT="armhf"
DEBARCH=""
CROSS_COMPILE="arm-linux-gnueabihf-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-arm-static"

# device information
SERIES="meson8b"
FAMILY="amlogic"
FAMILY_EXT="${SERIES}"
DTB="${SERIES}-odroidc1"

# default config
LINUX_DEFCONFIG="meson8b_defconfig"
UBOOT_DEFCONFIG=""

# partition scheme
GPT="false"
EFI="false"
VFAT="true"
P_VALUE="p2"
OFFSET="8192"

# boot config
EXTLINUX="false"
PETITBOOT="false"
BOOTINI="true"

# output
BOARD="odroidc1"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyAML0,115200n8 console=both"
EXTRA="net.ifnames=0 fsck.repair=yes"

# motd
DEFAULT_MOTD="Odroid C1"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}/${FAMILY_EXT}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
PRECOMPILED_UBOOT="true"
PKGVERSION="2011.03"
PRECOMPILED_UBOOT_DIR="files/boot/uboot/${BOARD}"

# github marker
GITHUB="linux"

# override userdata file
FORCE_VERSION="true"
#FORCE_UBOOT_VERSION=""

# linux packaging
DEVICETREE="${DTB}.dtb"
DEVICETREE2=""
DEVICETREE3=""
DEVICETREE4=""
PLATFORM="${FAMILY}"

# standard
LINUX_IMAGE="linux-image-${SERIES}"
LINUX_HEADERS="linux-headers-${SERIES}"
LINUX_PATH="usr/lib/${LINUX_IMAGE}"
LINUX_DTREE="usr/lib/${LINUX_IMAGE}/${DEVICETREE}"
LINUX_OLYS="usr/lib/${LINUX_IMAGE}/overlays"

# install
INSTALL_DTB="boot/${DEVICETREE}"
INSTALL_OLYS="boot/"
