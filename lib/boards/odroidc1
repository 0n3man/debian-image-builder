# architecture
ARCH="arm"
ARCH_EXT="armhf"
DEBARCH=""
CROSS_COMPILE="arm-linux-gnueabihf-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-arm-static"

# device information
SERIES="meson8b"
FAMILY="amlogic"
FAMILY_EXT="${SERIES}"
DTB="${SERIES}-odroidc1"

# default config
LINUX_DEFCONFIG="meson8b_defconfig"
UBOOT_DEFCONFIG=""

# partition scheme
GPT="false"
EFI="false"
VFAT="true"
P_VALUE="p2"
OFFSET="8192"

# boot config
EXTLINUX="false"
PETITBOOT="false"
BOOTINI="true"

# output
BOARD="odroidc1"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyAML0,115200n8 console=both"
EXTRA="net.ifnames=0 fsck.repair=yes"

# motd
DEFAULT_MOTD="Odroid C1"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}/${FAMILY_EXT}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT="files/boot/uboot/odroidc1"

# github marker
GITHUB="linux"

# linux packaging
DEVICETREE="${DTB}.dtb"
DEVICETREE2=""
PLATFORM="${FAMILY}"

# standard
LINUX_IMAGE="linux-image-${SERIES}"
LINUX_HEADERS="linux-headers-${SERIES}"
LINUX_PATH="usr/lib/${LINUX_IMAGE}"
LINUX_DTREE="usr/lib/${LINUX_IMAGE}/${DEVICETREE}"
LINUX_OLYS="usr/lib/${LINUX_IMAGE}/overlays"

# legacy
LEGACY_SERIES="${SERIES}"
LEGACY_IMAGE="${LEGACY_SERIES}-linux-image"
LEGACY_HEADERS="${LEGACY_SERIES}-linux-headers"
LEGACY_PATH="usr/lib/${LEGACY_IMAGE}"
LEGACY_DTREE="usr/lib/${LEGACY_IMAGE}/${DEVICETREE}"
LEGACY_OLYS="usr/lib/${LEGACY_IMAGE}/overlays"

# install
INSTALL_DTB="boot/${DEVICETREE}"
INSTALL_OLYS="boot/"
