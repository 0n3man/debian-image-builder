# architecture
ARCH="arm"
ARCH_EXT="armhf"
CROSS_COMPILE="arm-linux-gnueabihf-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-arm-static"

# device tree blob
DTB="imx6q-cubox-i"
FAMILY="freescale"
FAMILY_EXT="solidrun"

# default config
LINUX_DEFCONFIG="mx6cuboxi_defconfig"
UBOOT_DEFCONFIG="mx6cuboxi_defconfig"

# partition scheme
GPT="false"
EFI="false"
VFAT="false"
P_VALUE="p1"
OFFSET="4096"

# output
BOARD="cuboxi"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttymxc0,115200n8 console=both"
EXTRA="cma=128M net.ifnames=0"

# motd
DEFAULT_MOTD="Cubox-i"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT=""

# github marker
GITHUB="linux"

# linux packaging
DEVICETREE="${DTB}.dtb"
PLATFORM="${FAMILY}"

# standard
COMMONNAME="imx6q"
LINUXCOMMON="linux-image-${COMMONNAME}"
HEADERSCOMMON="linux-headers-${COMMONNAME}"
COMMONPATH="usr/lib/${LINUXCOMMON}"
COMMONDTREE="usr/lib/${LINUXCOMMON}/${DEVICETREE}"
COMMONOLYS="usr/lib/${LINUXCOMMON}/overlays"

# legacy
LEGACYNAME="${COMMONNAME}"
LINUXLEGACY="${LEGACYNAME}-linux-image"
HEADERSLEGACY="${LEGACYNAME}-linux-headers"
LEGACYPATH="usr/lib/${LINUXLEGACY}"
LEGACYDTREE="usr/lib/${LINUXLEGACY}/${DEVICETREE}"
LEGACYOLYS="usr/lib/${LINUXLEGACY}/overlays"

# install
INSTALL_DTB="boot/${PLATFORM}/${DEVICETREE}"
INSTALL_OLYS="boot/${PLATFORM}/"

