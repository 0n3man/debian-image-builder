# architecture
ARCH="arm64"
ARCH_EXT="arm64"
CROSS_COMPILE="aarch64-linux-gnu-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-aarch64-static"

# device tree blob
DTB="meson64_odroidc4"
FAMILY="amlogic"
FAMILY_EXT="odroid"

# default config
LINUX_DEFCONFIG="odroid_defconfig"
UBOOT_DEFCONFIG="odroid-c4_defconfig"

# partition scheme
GPT="false"
EFI="false"
VFAT="false"
P_VALUE="p1"
OFFSET="8192"

# firmware image package
RUN_FIP="odroidc4_fip"

# output
BOARD="odroidc4"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyAML0,115200n8 console=both"
EXTRA="net.ifnames=0 no_console_suspend"

# motd
DEFAULT_MOTD="Odroid C4"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT="files/boot/uboot/odroidc4"

# github marker
GITHUB="linux"

# linux packaging
DEVICETREE="${DTB}.dtb"
PLATFORM="${FAMILY}"

# standard
COMMONNAME="meson-sm1"
LINUXCOMMON="linux-image-${COMMONNAME}"
HEADERSCOMMON="linux-headers-${COMMONNAME}"
COMMONPATH="usr/lib/${LINUXCOMMON}/${PLATFORM}"
COMMONDTREE="usr/lib/${LINUXCOMMON}/${PLATFORM}/${DEVICETREE}"
COMMONOLYS="usr/lib/${LINUXCOMMON}/${PLATFORM}/overlays"

# legacy
LEGACYNAME="meson64"
LINUXLEGACY="${LEGACYNAME}-linux-image"
HEADERSLEGACY="${LEGACYNAME}-linux-headers"
LEGACYPATH="usr/lib/${LINUXLEGACY}/${PLATFORM}"
LEGACYDTREE="usr/lib/${LINUXLEGACY}/${PLATFORM}/${DEVICETREE}"
LEGACYOLYS="usr/lib/${LINUXLEGACY}/${PLATFORM}/overlays"

# install
INSTALL_DTB="boot/${PLATFORM}/${DEVICETREE}"
INSTALL_OLYS="boot/${PLATFORM}/"
