# architecture
ARCH="arm"
ARCH_EXT="armhf"
CROSS_COMPILE="arm-linux-gnueabihf-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-arm-static"

# device tree blob
DTB="sun8i-h3-orangepi-one"
FAMILY="allwinner"
FAMILY_EXT="sun8i"

# default config
LINUX_DEFCONFIG="sun8i_defconfig"
UBOOT_DEFCONFIG="orangepi_one_defconfig"

# partition scheme
GPT="false"
EFI="false"
VFAT="false"
P_VALUE="p1"
OFFSET="4096"

# output
BOARD="opione"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyS0,115200n8 console=both"
EXTRA="net.ifnames=0"

# motd
DEFAULT_MOTD="OrangePi One"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT=""

# github marker
GITHUB="linux"

# linux packaging
DEVICETREE="${DTB}.dtb"
PLATFORM="${FAMILY}"

# standard
COMMONNAME="${FAMILY_EXT}-h3"
LINUXCOMMON="linux-image-${COMMONNAME}"
HEADERSCOMMON="linux-headers-${COMMONNAME}"
COMMONPATH="usr/lib/${LINUXCOMMON}"
COMMONDTREE="usr/lib/${LINUXCOMMON}/${DEVICETREE}"
COMMONOLYS="usr/lib/${LINUXCOMMON}/overlays"

# legacy
LEGACYNAME="${FAMILY_EXT}"
LINUXLEGACY="${LEGACYNAME}-linux-image"
HEADERSLEGACY="${LEGACYNAME}-linux-headers"
LEGACYPATH="usr/lib/${LINUXLEGACY}"
LEGACYDTREE="usr/lib/${LINUXLEGACY}/${DEVICETREE}"
LEGACYOLYS="usr/lib/${LINUXLEGACY}/overlays"

# install
INSTALL_DTB="boot/${PLATFORM}/${DEVICETREE}"
INSTALL_OLYS="boot/${PLATFORM}/"
