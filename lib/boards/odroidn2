# architecture
ARCH="arm64"
ARCH_EXT="arm64"
CROSS_COMPILE="aarch64-linux-gnu-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-aarch64-static"

# device tree blob
DTB="meson64_odroidn2"
FAMILY="amlogic"
FAMILY_EXT="odroid"

# default config
LINUX_DEFCONFIG="odroid_defconfig"
ODROID_DEFCONFIG="odroidg12_defconfig"
UBOOT_DEFCONFIG="odroid-n2_defconfig"
IMG_EXP="${DTB}-*.img*"
P_VALUE="p1"

# firmware image package
RUN_FIP="odroidn2_fip"

# output
BOARD="odroidn2"
OUTPUT="output/${BOARD}"

# cmdline
BOOTCMD="odroidn2"
CONSOLE="console=tty1 console=ttyAML0,115200n8 console=both"
EXTRA="net.ifnames=0 no_console_suspend mitigations=off iommu.passthrough=1 usb-storage.quirks=0x152d:0x0576:u"

# motd
DEFAULT_MOTD="Odroid N2"

# patches
UBOOT_PATCHDIR="patches/uboot/${FAMILY}"
LINUX_PATCHDIR="patches/${FAMILY}"

# image size
IMGSIZE="3000MB"
