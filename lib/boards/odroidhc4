# architecture
ARCH="arm64"
ARCH_EXT="arm64"
CROSS_COMPILE="aarch64-linux-gnu-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-aarch64-static"

# device tree blob
DTB="meson64_odroidhc4"
FAMILY="amlogic"
FAMILY_EXT="odroid"

# default config
LINUX_DEFCONFIG="odroid_defconfig"
UBOOT_DEFCONFIG="odroid-hc4_defconfig"

# partition scheme
GPT="false"
VFAT="false"
P_VALUE="p1"
OFFSET="8192"

# firmware image package
RUN_FIP="odroidhc4_fip"

# output
BOARD="odroidhc4"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyAML0,115200n8 console=both"
EXTRA="net.ifnames=0 no_console_suspend iommu.passthrough=1"

# motd
DEFAULT_MOTD="Odroid HC4"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}"

# image
IMGSIZE="3000MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT="files/boot/uboot"

# github marker
GITHUB="linux"
