# architecture
ARCH="arm64"
ARCH_EXT="arm64"
CROSS_COMPILE="aarch64-linux-gnu-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-aarch64-static"

# device tree blob
DTB="meson64_odroidhc4"
FAMILY="amlogic"
FAMILY_EXT="odroid"

# default config
LINUX_DEFCONFIG="odroid-server_defconfig"
ODROID_DEFCONFIG="odroidg12_defconfig"
UBOOT_DEFCONFIG="odroid-hc4_defconfig"
IMG_EXP="${DTB}-*.img*"
P_VALUE="p1"

# firmware image package
RUN_FIP="odroidc4_fip"

# output
BOARD="odroidhc4"
OUTPUT="output/${BOARD}"

# cmdline
BOOTCMD="${FAMILY_EXT}"
CONSOLE="console=tty1 console=ttyAML0,115200n8 console=both"
EXTRA="net.ifnames=0 no_console_suspend iommu.passthrough=1"

# motd
DEFAULT_MOTD="Odroid HC4"

# patches
UBOOT_PATCHDIR="patches/uboot/${FAMILY}"
LINUX_PATCHDIR="patches/${FAMILY}"

# image size
IMGSIZE="3000MB"
