# architecture
ARCH="arm64"
ARCH_EXT="arm64"
CROSS_COMPILE="aarch64-linux-gnu-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-aarch64-static"

# device tree blob
DTB="bcm2711-rpi-4-b"
FAMILY="broadcom"
FAMILY_EXT="bcm2711"

# default config
LINUX_DEFCONFIG="bcm2711_defconfig"
UBOOT_DEFCONFIG="rpi_4_defconfig"

# partition scheme
GPT="false"
EFI="false"
VFAT="true"
P_VALUE="p2"
OFFSET="4096"

# output
BOARD="raspi4"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="console=tty1 console=ttyS0,115200 console=both 8250.nr_uarts=1"
EXTRA="logo.nologo net.ifnames=0 cma=320M firmware_class.path=/lib/firmware/updates/brcm"

# motd
DEFAULT_MOTD="Raspberry Pi 4B"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# precompiled
CUBOOT=""

# github marker
GITHUB="linux"

# linux packaging
DEVICETREE="${DTB}.dtb"
PLATFORM="${FAMILY}"

# standard
COMMONNAME="${FAMILY_EXT}"
LINUXCOMMON="linux-image-${COMMONNAME}"
HEADERSCOMMON="linux-headers-${COMMONNAME}"
COMMONPATH="usr/lib/${LINUXCOMMON}/${PLATFORM}"
COMMONDTREE="usr/lib/${LINUXCOMMON}/${PLATFORM}/${DEVICETREE}"
COMMONPATH="usr/lib/${LINUXCOMMON}/overlays"

# legacy
LEGACYNAME="raspberrypi"
LINUXLEGACY="${LEGACYNAME}-linux-image"
HEADERSLEGACY="${LEGACYNAME}-linux-headers"
LEGACYPATH="usr/lib/${LINUXLEGACY}/${PLATFORM}"
LEGACYDTREE="usr/lib/${LINUXLEGACY}/${PLATFORM}/${DEVICETREE}"
LEGACYPATH="usr/lib/${LINUXLEGACY}/overlays"

# install
INSTALL_DTB="boot/${DEVICETREE}"
INSTALL_OLYS="boot/"
