STATIC="qemu-aarch64-static"

# device tree blob
DTB="meson-gxl-s905x-libretech-cc"
FAMILY="amlogic"

# default config
LINUX_DEFCONFIG="amlogic_defconfig"
UBOOT_DEFCONFIG="libretech-cc_defconfig"
IMG_EXP="${DTB}-*.img*"
P_VALUE="p1"
SUB_CHIP=""

# output
BOARD="lepotato"
OUTPUT="output/${BOARD}"
RUN_FIP="lepotato_fip"

# cmdline
CONSOLE="console=tty1 console=ttyAML0,115200n8 console=both"
EXTRA="net.ifnames=0 no_console_suspend"
