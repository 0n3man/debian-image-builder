#!/bin/bash

user=""
passwd=""
DEBIAN_VERSION="buster"
VERSION="5.7.10"
menuconfig="0"
mainline="0"
crosscompile="1"
gcc="8"

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" \
	  --backtitle "Debian Image Builder" \
	  --title "Config Menu" \
	  --form "Choose:" \
14 31 7 \
	"Username:"	1 1	"$user" 		1 10 18 0 \
	"Password:"	2 1	"$passwd"  		2 10 18 0 \
	"Debian:"	3 1	"$DEBIAN_VERSION"  	3 10 18 0 \
        "Branch:"   	4 1     "$VERSION"        	4 10 18 0 \
        "Mainline:"   	5 1     "$mainline"        	5 15 2 0 \
	"Menuconfig:"	6 1	"$menuconfig"  		6 15 2 0 \
	"Crosscompile:" 7 1	"$crosscompile" 	7 15 2 0 \
	""		8 1	""			8 15 0 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo user='"' > tmp0
echo passwd='"' >> tmp0
echo DEBIAN_VERSION='"' >> tmp0
echo VERSION='"' >> tmp0
echo mainline= >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo gcc= >> tmp0
echo emmc=0 >> tmp0
echo custom_defconfig=0 >> tmp0
echo MYCONFIG='"'nameofyour_defconfig'"' >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# gcc version
echo GCC='"'$(gcc --version | grep 8.3.0 | awk '{print $4}')'"' >> userdata.txt

# clear screen
clear

# userdata
echo -e "\e[0;31m userdata file created.\e[0m"
echo
