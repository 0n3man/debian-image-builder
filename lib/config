#!/bin/bash

VERSION="5.7"
crosscompile="1"
user=""
passwd=""
menuconfig="0"
emmc="0"
mainline="0"

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" \
	  --backtitle "Debian Image Builder" \
	  --title "Config Menu" \
	  --form "Choose:" \
15 35 7 \
	"Username:"	1 1	"$user" 		1 10 18 0 \
	"Password:"	2 1	"$passwd"  		2 10 18 0 \
        "Branch:"   	3 1     "$VERSION"        	3 10 18 0 \
        "Mainline:"   	4 1     "$mainline"        	4 15 2 0 \
	"Menuconfig:"	5 1	"$menuconfig"  		5 15 2 0 \
	"Crosscompile:" 6 1	"$crosscompile" 	6 15 2 0 \
	"eMMC:"		7 1	"$emmc"		 	7 15 2 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo user='"' > tmp0
echo passwd='"' >> tmp0
echo VERSION='"' >> tmp0
echo mainline= >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo emmc= >> tmp0
echo custom_defconfig=0 >> tmp0
echo MYCONFIG='"'nameofyour_defconfig'"' >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo '"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# clear screen
clear

# userdata
echo -e "\e[0;31m userdata file created.\e[0m"
echo
