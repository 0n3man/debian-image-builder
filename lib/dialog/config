#!/bin/bash
RED="\e[0;31m"
FIN="\e[0m"

NAME=""
user=""
passwd=""
MOTD="Debian"
HOSTNAME="computer"
DEBIAN_VERSION="buster"
VERSION="5.10.23"
UBOOT_VERSION="v2021.01"
menuconfig="0"
mainline="0"
crosscompile="1"
rtl88XXau="0"
rtl88X2bu="0"
rtl88XXcu="0"

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Debian Image Builder" \
	  --title "Config Menu" \
	  --form "Choose:" \
24 40 17 \
	"Name:"		1 1	"$NAME" 		1 7 27 0 \
	"Username:"	2 1	"$user" 		2 11 22 0 \
	"Password:"	3 1	"$passwd"  		3 11 22 0 \
	"Branding:"	4 1	"$MOTD"			4 11 22 0 \
	"Hostname:"	5 1	"$HOSTNAME"		5 11 22 0 \
	"Debian:"	6 1	"$DEBIAN_VERSION"  	6 9 24 0 \
	""		7 1	""	 		7 14 0 0 \
        "U-Boot:"   	8 1     "$UBOOT_VERSION"       	8 9 10 0 \
        "Branch:"   	9 1     "$VERSION"        	9 9 10 0 \
        "Mainline:"   	10 1     "$mainline"        	10 11 2 0 \
	"Menuconfig:"	11 1	"$menuconfig"  		11 13 2 0 \
	"Crosscompile:" 12 1	"$crosscompile" 	12 15 2 0 \
	""		13 1	""	 		13 14 0 0 \
	"Wireless"	14 1	""	 		14 14 0 0 \
	"rtl88XXau:"	15 1	"$rtl88XXau"	 	15 12 2 0 \
	"rtl88X2bu:"	16 1	"$rtl88X2bu"	 	16 12 2 0 \
	"rtl88XXcu:"	17 1	"$rtl88XXcu"	 	17 12 2 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo NAME='"' > tmp0
echo user='"' >> tmp0
echo passwd='"' >> tmp0
echo MOTD='"' >> tmp0
echo HOSTNAME='"' >> tmp0
echo DEBIAN_VERSION='"' >> tmp0
echo UBOOT_VERSION='"' >> tmp0
echo VERSION='"' >> tmp0
echo mainline= >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo rtl8812au= >> tmp0
echo rtl88x2bu= >> tmp0
echo rtl8811cu= >> tmp0
echo emmc=0 >> tmp0
echo custom_defconfig=0 >> tmp0
echo MYCONFIG='"'nameofyour_defconfig'"' >> tmp0
echo verbose=0 >> tmp0
echo auto=0 >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# gcc version
echo GCC='"'$(gcc --version | grep gcc | awk '{print $4}')'"' >> userdata.txt

# categories
sed -i '1i### USER INFORMATION' userdata.txt
sed -i '7i### DISTRIBUTION RELEASE' userdata.txt
sed -i '9i### UBOOT AND LINUX KERNEL' userdata.txt
sed -i '15i### WIRELESS' userdata.txt
sed -i '19i### CUSTOM' userdata.txt
sed -i '25i### DO NOT EDIT BELOW THIS LINE' userdata.txt

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
