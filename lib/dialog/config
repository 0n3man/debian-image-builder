#!/bin/bash
RED="\e[0;31m"
FIN="\e[0m"

NAME=""
user=""
passwd=""
MOTD="Debian"
HOSTNAME="computer"
DISTRO="debian"
DISTRO_VERSION="bullseye"
UBOOT_VERSION="v2021.07"
VERSION="5.14.9"
BUILD_VERSION="1"
menuconfig="0"
rc="0"
crosscompile="1"
ccache="0"
rtl88XXau="0"
rtl88X2bu="0"
rtl88XXcu="0"
custom_defconfig="0"
MYCONFIG=""

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Debian Image Builder" \
	  --title "Config Menu" \
	  --form "Choose:" \
0 40 0 \
	"Name:"		1 1	"$NAME" 		1 7 27 0 \
	"Username:"	2 1	"$user" 		2 11 22 0 \
	"Password:"	3 1	"$passwd"  		3 11 22 0 \
	"Branding:"	4 1	"$MOTD"			4 11 22 0 \
	"Hostname:"	5 1	"$HOSTNAME"		5 11 22 0 \
	""		6 1	""	 		6 14 0 0 \
	"Distribution"	7 1	""	 		7 14 0 0 \
	"Distro:"	8 1	"$DISTRO"	  	8 9 24 0 \
	"Release:"	9 1	"$DISTRO_VERSION"  	9 10 23 0 \
	""		10 1	""	 		10 14 0 0 \
        "U-Boot:"   	11 1    "$UBOOT_VERSION"        11 9 10 0 \
        "Branch:"   	12 1    "$VERSION"        	12 9 10 0 \
        "Build:"   	13 1    "$BUILD_VERSION"        13 8 4 0 \
        "RC:"   	14 1    "$rc"	        	14 5 2 0 \
	"Menuconfig:"	15 1	"$menuconfig"  		15 13 2 0 \
	"Crosscompile:" 16 1	"$crosscompile" 	16 15 2 0 \
	"Caching on:"	17 1	"$ccache"	 	17 13 2 0 \
	""		18 1	""	 		18 14 0 0 \
	"Wireless"	19 1	""	 		19 14 0 0 \
	"rtl88XXau:"	20 1	"$rtl88XXau"	 	20 12 2 0 \
	"rtl88X2bu:"	21 1	"$rtl88X2bu"	 	21 12 2 0 \
	"rtl88XXcu:"	22 1	"$rtl88XXcu"	 	22 12 2 0 \
	""		23 1	""	 		23 14 0 0 \
	"Customize"	24 1	""	 		24 14 0 0 \
	"Defconfig:"	25 1	"$custom_defconfig" 	25 12 2 0 \
	"Name:"		26 1	"$MYCONFIG"	  	26 7 27 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo NAME='"' > tmp0
echo user='"' >> tmp0
echo passwd='"' >> tmp0
echo MOTD='"' >> tmp0
echo HOSTNAME='"' >> tmp0
echo DISTRO='"' >> tmp0
echo DISTRO_VERSION='"' >> tmp0
echo UBOOT_VERSION='"' >> tmp0
echo VERSION='"' >> tmp0
echo BUILD_VERSION='"' >> tmp0
echo rc= >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo ccache= >> tmp0
echo rtl8812au= >> tmp0
echo rtl88x2bu= >> tmp0
echo rtl8811cu= >> tmp0
echo custom_defconfig= >> tmp0
echo MYCONFIG='"' >> tmp0
echo emmc=0 >> tmp0
echo verbose=0 >> tmp0
echo auto=1 >> tmp0
echo aircrack=0 >> tmp0
echo CFLAGS='"''"' >> tmp0
echo builder=2.7 >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo _defconfig'"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# gcc version
echo GCC='"'$(gcc --version | grep gcc | awk '{print $4}')'"' >> userdata.txt

# categories
sed -i '1i### USER INFORMATION' userdata.txt
sed -i '7i### DISTRIBUTION AND RELEASE' userdata.txt
sed -i '10i### UBOOT AND LINUX KERNEL' userdata.txt
sed -i '18i### WIRELESS' userdata.txt
sed -i '22i### CUSTOM' userdata.txt
sed -i '29i### COMPILER TUNING' userdata.txt
sed -i '31i### DO NOT EDIT BELOW THIS LINE' userdata.txt

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
