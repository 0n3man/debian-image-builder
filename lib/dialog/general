#!/bin/bash
### DO NOT EDIT
source lib/boards/$1
MAKE_OUTPUT="output/$1"
DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "Debian Image Builder" \
    --title "$1" \
    --clear \
    --cancel-label "Exit" \
    --menu "Select:" $HEIGHT $WIDTH 5 \
    "1" "Make All" \
    "2" "Make U-Boot" \
    "3" "Make Kernel" \
    "4" "Make ROOTFS" \
    "5" "Make Image" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-;
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo "Program terminated."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo "Program aborted." >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo "Program terminated."
      ;;
    1 )
      make "all" "board=$1"
      dialog --prgbox "Results:" "ls $IMG_EXP *$ARCH_EXT* $MAKE_OUTPUT/" 30 60
      exit 0
      ;;
    2 )
      echo "$1-uboot" > ~/out.txt
      make uboot "board=$1"
      dialog --prgbox "Results:" "ls $MAKE_OUTPUT/*.bin" 30 60
      ;;
    3 )
      make kernel "board=$1"
      dialog --prgbox "Results:" "ls $MAKE_OUTPUT/*.deb" 30 60
      ;;
    4 )
      if [ "$ARCH" == "arch64" ]; then make rootfs; else make rootfsv7; fi
      dialog --prgbox "Results:" "ls *$ARCH_EXT*" 30 60
      ;;
    5 )
      make image "board=$1"
      dialog --prgbox "Results:" "ls $IMG_EXP" 30 60
      ;;
  esac
done
