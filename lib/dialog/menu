#!/bin/bash
### DO NOT EDIT
RED="\e[0;31m"
FIN="\e[0m"
DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

source lib/source > /dev/null 2>&1
UD=userdata.txt > /dev/null 2>&1
userdata(){
echo ""
echo "Please create a userdata.txt file"
while [ true ]; do
read -t 10 -n 1
if [ $? = 0 ]; then
	exit;
else
	echo "run make config";
fi
done
}

if [ -f "$UD" ]; then
	echo ""
else 
	userdata;
fi
validation

while true; do
	exec 3>&1
	selection=$(dialog \
	--backtitle "Debian Image Builder" \
	--title "Boards" \
	--clear \
	--cancel-label "Exit" \
	--menu "Select:" $HEIGHT $WIDTH 15 \
	"1" "Le Potato" \
	"2" "NanoPC-T4" \
	"3" "NanoPi M1" \
	"4" "NanoPi NEO" \
	"5" "NanoPi NEO Plus2" \
	"6" "Odroid C4" \
	"7" "Odroid N2" \
	"8" "Odroid N2+" \
	"9" "OrangePi One" \
	"10" "OrangePi PC" \
	"11" "Pine64" \
	"12" "Radxa Zero" \
	"13" "Raspberry Pi 4B" \
	"14" "Renegade" \
	"15" "Rock64" \
	"16" "RockPro64" \
	"17" "Tritium" \
 	2>&1 1>&3)
 	exit_status=$?
 	exec 3>&-;
case $exit_status in
	$DIALOG_CANCEL)
		clear
		echo -e "${RED}Program terminated${FIN}."
		exit
		;;
	$DIALOG_ESC)
		clear
		echo -e "${RED}Program aborted${FIN}." >&2
		exit 1
		;;
esac
case $selection in
	0 )
		clear
		echo -e "${RED}Program terminated${FIN}."
		;;
	1 )
		chmod +x lib/dialog/lepotato
	      ./lib/dialog/lepotato
		;;
	2 )
		chmod +x lib/dialog/nanopct4
		./lib/dialog/nanopct4
		;;
	3 )
		chmod +x lib/dialog/npim1
		./lib/dialog/npim1
		;;
	4 )
		chmod +x lib/dialog/npineo
		./lib/dialog/npineo
		;;
	5 )
		chmod +x lib/dialog/npineoplus2
		./lib/dialog/npineoplus2
		;;
	6 )
		chmod +x lib/dialog/odroidc4
		./lib/dialog/odroidc4
		;;
	7 )
		chmod +x lib/dialog/odroidn2
		./lib/dialog/odroidn2
		;;
	8 )
		chmod +x lib/dialog/odroidn2+
		./lib/dialog/odroidn2+
		;;
	9 )
		chmod +x lib/dialog/opione
		./lib/dialog/opione
		;;
	10 )
		chmod +x lib/dialog/opipc
		./lib/dialog/opipc
		;;
	11 )
		chmod +x lib/dialog/pine64
		./lib/dialog/pine64
		;;
	12 )
		chmod +x lib/dialog/rzero
		./lib/dialog/rzero
		;;
	13 )
		chmod +x lib/dialog/raspi4
		./lib/dialog/raspi4
		;;
	14 )
		chmod +x lib/dialog/renegade
		./lib/dialog/renegade
		;;
	15 )
		chmod +x lib/dialog/rock64
		./lib/dialog/rock64
		;;
	16 )
		chmod +x lib/dialog/rockpro64
		./lib/dialog/rockpro64
		;;
	17 )
		chmod +x lib/dialog/tritium
		./lib/dialog/tritium
		;;
	esac
done
