#!/bin/bash
### DO NOT EDIT
RED="\e[0;31m"
FIN="\e[0m"
DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "Debian Image Builder" \
    --title "Boards" \
    --clear \
    --cancel-label "Exit" \
    --menu "Select:" $HEIGHT $WIDTH 10 \
    "1" "Le Potato" \
    "2" "NanoPC-T4" \
    "3" "NanoPi NEO Plus2" \
    "4" "Odroid C4" \
    "5" "Odroid N2" \
    "6" "Odroid N2 Plus" \
    "7" "Pine64" \
    "8" "Raspberry Pi 4B" \
    "9" "Renegade" \
    "10" "Rock64" \
    "11" "Tritium" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-;
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo -e "${RED}Program terminated${FIN}."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo -e "${RED}Program aborted${FIN}." >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo -e "${RED}Program terminated${FIN}."
      ;;
    1 )
      chmod +x lib/dialog/lepotato
      ./lib/dialog/lepotato
      ;;
    2 )
      chmod +x lib/dialog/nanopct4
      ./lib/dialog/nanopct4
      ;;
    3 )
      chmod +x lib/dialog/npineoplus2
      ./lib/dialog/npineoplus2
      ;;
    4 )
      chmod +x lib/dialog/odroidc4
      ./lib/dialog/odroidc4
      ;;
    5 )
      chmod +x lib/dialog/odroidn2
      ./lib/dialog/odroidn2
      ;;
    6 )
      chmod +x lib/dialog/odroidn2plus
      ./lib/dialog/odroidn2plus
      ;;
    7 )
      chmod +x lib/dialog/pine64
      ./lib/dialog/pine64
      ;;
    8 )
      chmod +x lib/dialog/raspi4
      ./lib/dialog/raspi4
      ;;
    9 )
      chmod +x lib/dialog/renegade
      ./lib/dialog/renegade
      ;;
    10 )
      chmod +x lib/dialog/rock64
      ./lib/dialog/rock64
      ;;
    11 )
      chmod +x lib/dialog/tritium
      ./lib/dialog/tritium
      ;;

  esac
done
