#!/bin/bash
### DO NOT EDIT
OUTPUT="output/opir1"
DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "Debian Image Builder" \
    --title "Orange Pi R1" \
    --clear \
    --cancel-label "Exit" \
    --menu "Select:" $HEIGHT $WIDTH 5 \
    "1" "Make All" \
    "2" "Make U-Boot" \
    "3" "Make Kernel" \
    "4" "Make ROOTFS" \
    "5" "Make Image" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-;
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo "Program terminated."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo "Program aborted." >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo "Program terminated."
      ;;
    1 )
      make opir1-all
      dialog --prgbox "Results:" "ls h2-plus-orangepi-r1-*.img* *armhf* $OUTPUT/" 30 60
      exit 0
      ;;
    2 )
      make opir1-uboot
      dialog --prgbox "Results:" "ls $OUTPUT/*.bin" 30 60
      ;;
    3 )
      make opir1-kernel
      dialog --prgbox "Results:" "ls $OUTPUT/*.deb" 30 60
      ;;
    4 )
      make rootfsv7
      dialog --prgbox "Results:" "ls *armhf*" 30 60
      ;;
    5 )
      make opir1-image
      dialog --prgbox "Results:" "ls h2-plus-orangepi-r1-*.img*" 30 60
      ;;
  esac
done
