#!/bin/bash
source /etc/opt/board.txt
source /etc/default/dynamic-motd

if [[ "$BRANDING" == "true" ]]; then
	echo "";
	toilet -f ${T_FONT} --filter ${T_FILTER} $DEFAULT_MOTD;
	echo "";
else
	if [[ -f "/proc/device-tree/model" ]]; then
		MODEL=$(tr -d '\0' </proc/device-tree/model)
		echo "";
		echo -e "== BOARD"
		echo -en "Model:       "
		toilet -f term $MODEL;
		echo "";
	fi
fi
