#!/bin/bash

echo ""
echo -en "Updating menu and scripts "
governor -u > /dev/null 2>&1
swh -U > /dev/null 2>&1
fan-ctrl -u > /dev/null 2>&1
MENU=`command -v menu-config`
MENUDIR="/usr/local/bin/"
if [ -f $MENU ]; then
	sudo mv -f $MENU $MENU.orig;
fi
sudo wget -cq https://raw.githubusercontent.com/pyavitz/debian-image-builder/feature/files/scripts/menu-config -P $MENUDIR
sudo chmod +x $(command -v menu-config)
if [ -f $MENU ]; then
	sudo rm -f $MENU.orig;
else
	sudo mv -f $MENU.orig $MENU;
fi
echo -e "[done]"
sleep 1s
clear -x
menu-config
exit 0
